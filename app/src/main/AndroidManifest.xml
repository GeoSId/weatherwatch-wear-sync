<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.weather.WeatherApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Weather">
        
        <!-- Declare capability for wearable to detect this phone app -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />
        
        <!-- Link to companion wearable app -->
        <meta-data
            android:name="com.google.android.wearable.beta.app"
            android:resource="@xml/wear" />
        
        <!-- Declare mobile app capability -->
        <meta-data
            android:name="com.google.android.wearable.CAPABILITY"
            android:resource="@xml/mobile_capability" />
            
        <activity
            android:name="com.weather.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Wearable Listener Service for receiving messages from wearable devices -->
        <service
            android:name="com.weather.data.wearable.WearableListenerServiceImpl"
            android:enabled="true"
            android:exported="true"
            android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <action android:name="com.google.android.gms.wearable.CAPABILITY_CHANGED" />
                <action android:name="com.google.android.gms.wearable.CHANNEL_EVENT" />
                <data android:scheme="wear" android:host="*" />
            </intent-filter>
        </service>

    </application>
</manifest> 